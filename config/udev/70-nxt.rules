# NXT in normal mode
SUBSYSTEM=="usb", ATTR{idVendor}=="0694", ATTR{idProduct}=="0002", GROUP="users", MODE="0660", SYMLINK+="legonxt-%k", RUN+="/etc/udev/nxt_event_handler.sh 'nxt' '$attr{serial}' '%k' '%M' '%m'" 
# NXT in firmware-update (SAM-BA) mode
SUBSYSTEM=="usb", ATTR{idVendor}=="03eb", ATTR{idProduct}=="6124", GROUP="users", MODE="0660", SYMLINK+="legonxt-samba-%k" RUN+="/etc/udev/nxt_event_handler.sh 'samba' '$attr{serial}' '%k' '%M' '%m'"
